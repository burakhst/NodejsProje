<%- include('adminPanel')%>
<div>
    <div>
        <iframe src="/anasayfa" style="width:100%; height:500px; "> </iframe>
    </div>
    <div class="container"
        style="width: 500px; border: 1px solid rgba(218, 203, 203, 0.555); padding: 20px; vertical-align:center;  display:table;">
        <div class="row">
            <form action="/admin/anaBlokEklendi" method="POST">
                <label style="font-size:20px; font-family:sans-serif">Anasayfa Yeni Başlık Ekle:</label>
                <h1>Başlık Adı:</h1>
                <input class="input" type="text" name="aBlokEkle" required placeholder="Tyt Konuları?">
                
                <input class="button is-primary" type="submit" value="Kayıt Ekle" style="margin:5px 0px;float:right;">
            </form>
        </div>
    </div>
    <div class="container"
        style="width: 500px; border: 1px solid rgba(218, 203, 203, 0.555); padding: 20px; vertical-align:center;  display:table;">
        <div class="row">
            <form action="/admin/anaBlokSilindi" method="POST">
                <label style="font-size:20px; font-family:sans-serif">Anasayfa Başlık Sil:</label>
                <h1>Hangi Başlık Silinsin:</h1>
                <select class="input" name="aBlokSil">
                        <% veri[0].forEach(function(kayıt) { %> <option value="<%= kayıt.Id %>">
                            <%= kayıt.baslikAdi %></option><% }); %>
                    </select>
                
                <input class="button is-danger" type="submit" value="Kayıt Sil" style="margin:5px 0px;float:right;">
            </form>
        </div>
    </div>
    <div class="container"
    style="width: 500px; border: 1px solid rgba(218, 203, 203, 0.555); padding: 20px; vertical-align:center;  display:table;">
    <div class="row">
        <form action="/admin/anaBlokGuncellendi" method="POST">
            <label style="font-size:20px; font-family:sans-serif">Anasayfa Yeni Başlık Sil:</label>
            <h1>Hangi Başlık Güncellensin:</h1>
            <select class="input" name="aBlokSil">
                    <% veri[0].forEach(function(kayıt) { %> <option value="<%= kayıt.Id %>">
                        <%= kayıt.baslikAdi %></option><% }); %>
                </select>
                <h1>Yeni Başlık Adı:</h1>
                <input class="input" type="text" name="aBlokGaD" required placeholder="Tyt Konuları?">
            
            <input class="button is-info" type="submit" value="Güncelle" style="margin:5px 0px;float:right;">
        </form>
    </div>
</div>


</div>