<%- include('./partials/header')%>
<div class="container" style="width: auto; vertical-align:center; display:table;">
    <div class="row">
        <h2 style="font-size:28px; font-family:Arial, Helvetica, sans-serif; padding: 5px; text-align: center;">4 YILLIK
            TABAN PUANLARI(2019)</h2>
        <h1 style="font-size:25px; font-family:sans-serif; padding: 5px; text-align: center;">
            <% veri[1].forEach(function(kayıt) { %><%= kayıt.bolumAdi %><% }); %></h1>

        <table class="table is-bordered" style="width:auto; margin:5px auto 50px;">
            <thead>
                <tr>
                    <th>ÜNİVERSİTE</th>
                    <th>BÖLÜM</th>
                    <th>ÖĞR.ŞEKLİ</th>
                    <th>PUAN TÜRÜ</th>
                    <th>KONT.</th>
                    <th>TABAN PAUN</th>
                    <th>BAŞARI SIRALAMASI</th>
                </tr>
            </thead>
            <% veri[0].forEach(function(kayıt) { %>
            <tr>
                <td><%= kayıt.universiteAdi %></td>
                <td><%= kayıt.bolumAdi %></td>
                <td><%= kayıt.ogrSekli %></td>
                <td><%= kayıt.puanTur %></td>
                <td><%= kayıt.kontenjan %></td>
                <td><%= kayıt.tabanPuan %></td>
                <td><%= kayıt.basariSiralamasi %></td>
            </tr>
            <% }); %>
        </table>

        <div class="uY" style="margin: auto auto; border:1px solid rgba(201, 188, 188, 0.582);">
                <div class="baslik" style="margin:20px 20px auto; font-family: sans-serif; font-size: 25px;">
                        <b>Üye Yorumları</b>
                    </div>
                    <hr width="auto">
                        <% veri[2].forEach(function(kayıt) { %>
                    <div class="yorum" style="width: auto; margin: 10px; padding: 10px; border:1px solid rgba(182, 166, 166, 0.253);">
                        <div>
                            <img src="/picture/pFoto.jpg" style="width: 50px;height: 40px; border-radius: 100%; float:left; margin:10px;">
                            <cite style="font-size:20px; font-family:sans-serif; top: 8px; position: relative; color: black;"><%= kayıt.kullaniciAdi %></cite>
                        </div>
                        <div style="color: rgba(167, 157, 157, 0.692);">
                            <p><%= kayıt.tarih %></p>
                        </div>
                        <div style="font-size: 20px;">
                                <%= kayıt.kullaniciYorum %>
                        </div>
                    </div>
                    <% }); %>
                </div>
        </div>
        <% if( profil ) { %>
            <div class="kutu" style="height: 230px; margin:5px auto; padding: 10px; border:1px solid rgba(201, 188, 188, 0.582);">
                <div class="kutu_baslik">
                    <div>
                        <div>
                            <form action="/4YilTabanPuan" method="POST">
                                <label></label>
                                <textarea name="kYorum" cols="30" rows="10"
                                    style="width: 1067px; height: 166px; font-family: sans-serif; font-size: 20px; padding: 10px; resize: none;"
                                    placeholder="Yorumunuz.."></textarea>
                                <div >
                                    <input class="button is-success" type="submit" style="float: right; margin-right: 10px;">
                                </div>
    
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

    </div>
</div>