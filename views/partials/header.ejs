            display: inline-block;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        li .h1:hover,
        .dropdown:hover .dropbtn {
            background-color: grey;
            color: white
        }

        li.dropdown {
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
