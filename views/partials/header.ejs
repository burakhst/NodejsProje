        .dropdown-content .h1:hover {
            color: #5f5f5ff8;
            background-color: #eeeeeedc;
            border-bottom: solid 2px rgba(113, 103, 103, 0.517);
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }
