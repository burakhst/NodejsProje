<%- include('adminPanel')%>
<style>
    th {
        font-size: 22px;
        padding: 5px;
        font-family: sans-serif;
    }

    td {
        font-size: 22px;
        padding: 5px;
        font-family: sans-serif;
    }

    .row {
        width: 500px;
        float: left;
        margin: 5px;
    }
</style>
<div class="container">
    <div class="row">
        <table class="table is-bordered">
            <tr>
                <th>Id</th>
                <th width="500">Kullanıcı Adları</th>
            </tr><% veri[0].forEach(function(kayıt) { %>
            <tr>
                <td><%= kayıt.Id %></td>
                <td><%= kayıt.kullaniciAdi %></td>
            </tr>
            <% }); %>
        </table>
    </div>
    <div class="row">
            <table class="table is-bordered">
                <tr>
                    <th width="500">Engelli Kullanıcılar:</th>
                </tr><% veri[1].forEach(function(kayıt) { %>
                <tr>
                    <td><%= kayıt.kullaniciAdi %></td>
                </tr>
                <% }); %>
            </table>
        </div>
</div>
<div class="container">

    <div class="row" style="border:1px solid rgba(95, 87, 87, 0.26); padding: 25px;">
        <form action="/admin/kullaniciEngelle" method="POST">
            <label style="font-size:20px; font-family:sans-serif">Engellenecek Kullanıcı Adı:</label>
            <select class="input" name="kban">
                <% veri[0].forEach(function(kayıt) { %><option value="<%= kayıt.kullaniciAdi %>"><%= kayıt.kullaniciAdi %>
                </option><% }); %>
            </select>
            <input class="button is-danger" type="submit" value="Banla" style="margin:5px 0px;float:right;">
        </form>
    </div>
    <div class="row" style="border:1px solid rgba(95, 87, 87, 0.26); padding: 25px;">
        <form action="/admin/kullaniciEngelKaldir" method="POST">
            <label style="font-size:20px; font-family:sans-serif">Hangi hesap aktif edilsin:</label>
            <select class="input" name="kban">
                <% veri[1].forEach(function(kayıt) { %><option value="<%= kayıt.kullaniciAdi %>"><%= kayıt.kullaniciAdi %>
                </option><% }); %>
            </select>
            <input class="button is-info" type="submit" value="Aktif Et" style="margin:5px 0px;float:right;">
        </form>
    </div>
</div>